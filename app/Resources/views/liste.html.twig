{% include 'base.html.twig' %}

<table id="maListe" class="table table-striped table-bordered" style="width:100%">
    <thead>
    <tr>

        <th>Nom de la recette</th>
        <th>Type de plat</th>
        <th>Description</th>
        <th>Vignette</th>
    </tr>
    </thead>
    <tbody>
    {% for elt in recette %}

        <tr class="text-center">
            <td>{{ elt.name }}</td>
            <td>{{ elt.type }}</td>
            <td>{{ elt.description }}</td>
            <td><img src="{{ asset('uploads/images/'~elt.image) }}" alt="" style="width: 100px; height: 100px;"></td>
        </tr>
    {% endfor %}

    </tbody>
    <tfoot>
    <tr>
        <th>Nom de la recette</th>
        <th>Type de plat</th>
        <th>Description</th>
        <th>Vignette</th>
    </tr>
    </tfoot>
</table>

<style>
    body{


        background:url("http://szzljy.com/images/farm/farm2.jpg") fixed no-repeat;

        background-size: cover;
    }
    #maListe{


        background-color: antiquewhite;
    }

</style>